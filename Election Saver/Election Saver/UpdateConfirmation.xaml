<Window x:Class="Election_Saver.UpdateConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Election_Saver"
        mc:Ignorable="d"
        Title="Update Confirmation" Height="160" Width="364" MinWidth="400" MinHeight="160" MaxWidth="400" MaxHeight="160">
    <Grid Height="160" MinWidth="400" MinHeight="160" MaxWidth="400" MaxHeight="160">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Are you sure you want to update?" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="yesButton" Content="Yes" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Width="60" Click="yesButton_Click"/>
        <Button x:Name="noButton" Content="No" HorizontalAlignment="Left" Margin="225,0,0,0" VerticalAlignment="Center" Width="60" Click="noButton_Click"/>
        <Label Content="(Note: any unsaved data will be lost.)" HorizontalAlignment="Left" Margin="90,23,0,0" VerticalAlignment="Top" Width="211"/>

    </Grid>
</Window>
